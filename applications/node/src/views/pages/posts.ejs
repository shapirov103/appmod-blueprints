<%- include('../partials/header'); -%>

<h1>Blog Posts</h1>

<h3>
    <% if (response.status != null) { %>
        <em><%= response.status %></em>
    <% } %>
</h3>

<div class="row">
    <div class="col-sm-12" style="margin-bottom:10px;">
        <a href="/add_posts" type="button" class="btn btn-default">New Post</a>
        <a href="/api/posts/clear_posts" button type="submit" id="inputSubmit" class="btn btn-default">Clear All Posts</a>
    </div>
</div>

<!--List all the posts-->
<% if (response.all_posts != null) { response.all_posts.forEach(function(post) { %>
    <div class="col-sm-4 col-md-4">
        <div class="thumbnail">
            <img src="data:image/svg+xml;base64,"                alt="logo"
                style="height:250px;width:100%;display:block"
                >
            <div class="caption" style="overflow:hidden">
                <h3><%= post.title %></h3>
                <p><%= post.content %></p>
                <p><a href="/api/posts/<%= post._id %>" class="btn btn-primary" role="button">Read</a></p>
            </div>
        </div>
    </div>

<% }) } %>

<%- include ('../partials/footer'); -%>